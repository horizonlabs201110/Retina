<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
                <layout class="ch.qos.logback.classic.PatternLayout">
                        <Pattern>
                                %d{HH:mm:ss.SSS} %-5level %class{45}:%L %M - %msg%n
                </Pattern>
                </layout>
        </encoder>
    </appender>

    <logger name="com" level="INFO" />
    <logger name="net" level="INFO" />
    <logger name="net.sf.ehcache.config" level="ERROR" />
    <logger name="net.sf.ehcache.hibernate" level="ERROR" />        
    <logger name="org" level="INFO" />
    <logger name="org.hibernate" level="WARN" />
    <logger name="org.hibernate.cache.EhCacheProvider" level="ERROR" />
    <logger name="org.apache.commons.jexl2.Interpreter" level="ERROR" />
    <logger name="org.concordiainternational.org" level="INFO" /> 
<logger name="org.concordiainternational.competition.nec" level="DEBUG" />

<root level="INFO">
          <appender-ref ref="STDOUT" />
        </root>

</configuration>
