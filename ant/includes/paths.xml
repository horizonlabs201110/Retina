<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE project>
<project name="paths" basedir=".">

    <property name="src.dir" value="src" />
    <property name="java.src.dir" value="${src.dir}/main/java" />
    <property name="test.src.dir" value="${src.dir}/test/java" />
    <property name="resources.dir" value="${src.dir}/main/resources" />

    <property name="libs.dir" value="libs" />
    <property name="config.dir" value="config" />
    <property name="repository.dir" value="repository" />
    
    <property name="tmp.dir" value="tmp" />
    <property name="build.tmp.dir" value="${tmp.dir}/build" />
    <property name="dist.tmp.dir" value="${tmp.dir}/dist" />
    <property name="reports.tmp.dir" value="${tmp.dir}/reports" />
    <property name="javadoc.tmp.dir" value="${tmp.dir}/javadoc" />
    <property name="logs.tmp.dir" location="${tmp.dir}/logs"/>
    <property name="zip.dir" location="${tmp.dir}/ziptmp"/>
    <property name="coverage.dir" location="${tmp.dir}/emma"/>
    <property name="app_jar_name" value="${module}-${ivy.deliver.revision}.jar"/>
    
    <path id="build.classpath">
        <fileset id="build.classpath.jars" dir="${libs.dir}">
            <include name="compile/*.jar" />
            <include name="default/*.jar" />
            <include name="runtime/*.jar" />
            <include name="test/*.jar" />
        </fileset>
    </path>

    <path id="build.support.classpath">
        <fileset id="build.support.jars" dir="${libs.dir}">
            <include name="build-support/*.jar" />
        </fileset>
    </path>
</project>
